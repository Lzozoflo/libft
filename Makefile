NAME 	=	libft.a
FLAGS =	-Wall -Wextra -Werror
RM		=	rm -fr

#############################################################################################
#																							#
#										// SOURCE											#
#																							#
#############################################################################################

INC		=		libft.h

SRC 	=		ft_atoi.c\
				ft_bzero.c\
				ft_isalnum.c\
				ft_isalpha.c\
				ft_isascii.c\
				ft_isdigit.c\
				ft_isprint.c\
				ft_memcpy.c\
				ft_memset.c\
				ft_strchr.c\
				ft_strdup.c\
				ft_strlcpy.c\
				ft_strlen.c\
				ft_strrchr.c\
				ft_tolower.c\
				ft_toupper.c\

#############################################################################################
#																							#
#										// OBJECT											#
#																							#
#############################################################################################

OBJ 	=	$(SRC:.c=.o)

#############################################################################################
#																							#
#										// COMPILATION										#
#																							#
#############################################################################################


all		: 	$(NAME)

$(NAME)	:	$(OBJ)
		ar -rcs $(NAME) $(OBJ) $(INC)


#############################################################################################
#																							#
#								// CLEAN  FCLEAN  RE										#
#																							#
#############################################################################################

clean 	:
	$(RM) *.o 

fclean 	: 	clean
	$(RM) $(NAME)

re 		:	 fclean all

.PHONY: all src clean fclean re